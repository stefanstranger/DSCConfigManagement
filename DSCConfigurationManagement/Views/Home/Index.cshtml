@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>DSC Configuration Management</h1>
</div>

<div class="row">

    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Nodes</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: guids"> 
                    <li>
                        <strong><span data-bind="text: FQDN"></span></strong>: <span data-bind="text: DSCGuid"></span>
                        <small><a href="#">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <div class="col-md-4">
        <!-- TODO: Book details -->
    </div>

    <div class="col-md-8">
        <!-- TODO: Add new Guid -->
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Add Guid</h2>
                </div>

                <div class="panel-body">
                    <form class="form-horizontal" data-bind="submit: addGuid">
                        <div class="form-group">
                            <label for="inputId" class="col-sm-4 control-label">ID</label>
                            <div class="col-sm-10">
                               <!-- <select data-bind="options:authors, optionsText: 'Name', value: newGuid.Id"></select> -->
                                <input type="number" class="form-control" id="inputId" data-bind="value:Id" />
                            </div>
                        </div>

                        <div class="form-group" data-bind="with: newGuid">
                            <label for="inputFQDN" class="col-sm-4 control-label">FQDN</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputFQDN" data-bind="value:FQDN" />
                            </div>

                            <label for="inputDSCGuid" class="col-sm-4 control-label">DSCGuid</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputDSCGuid" data-bind="value:DSCGuid" />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
